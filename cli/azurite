#!/bin/bash

#-FANCY TEXT VARIABLES
normal="\e[0m"
bold="\e[1m"
italic="\e[3m"
cyan="\e[36m"
light_cyan="\e[96m"
chip=$bold$cyan[$light_cyanðŸ’Ž$cyan]$normal

#-Azurite dir root
export AZURITE_DIR=`dirname $0`/.azurite.d

#-TOOLBOX
parse_colours() {
    echo "$@" | sed \
        -e s/Â§n/"\\$normal"/g \
        -e s/Â§c/"\\$cyan"/g \
        -e s/Â§l/"\\$light_cyan"/g \
        -e s/Â§b/"\\$bold"/g \
        -e s/Â§i/"\\$italic"/g;
}

azurite_speach() { text=$(parse_colours "$@") && echo -e $chip $bold$text$normal; }
azurite_log() { text=$(parse_colours "$@") && echo -ne $cyan"> "$text; }
azurite_raw() { text="$(parse_colours "$@")" && echo -ne "$text"; }
azurite_endlog() { echo -ne $normal; }

case "$1" in
    "help" | "?" | "-h") $AZURITE_DIR/help.sh;;
    "install") $AZURITE_DIR/install.sh;;
    "update") $AZURITE_DIR/update.sh;;
    "remove") azurite_speach "Not implemented yet";;
    "version" | "-v" | "-V") azurite_speach "Not implemented yet";;
    "__including") ;;
    *) azurite_speach "Â§lUnknown Command: Â§n'Â§c$1Â§n', try Â§lazurite helpÂ§n to get the manual"
esac
